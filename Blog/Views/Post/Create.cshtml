@model Blog.Models.Post

@{
    ViewBag.PageTitle = ViewBag.Title = "Crea un post";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <div class="form_actions">
            <input alt="Scrivi un nuovo post" id="submit" src="@Url.Content("~/Images/save_48.png")"
                   type="image" value="Create" />
        </div>
        <p id="form_title">Scrivi un nuovo post</p>
        <div class="form-group">
            @Html.LabelFor(model => model.title, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.title)
                <div class="error_explanation">
                    @Html.ValidationMessageFor(model => model.title)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.body, new { @class = "control-label" })

            <div>
                @Html.TextAreaFor(model => model.body, new { @rows = 25, @cols = 75 })
                <div class="error_explanation">
                    @Html.ValidationMessageFor(model => model.body)
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
